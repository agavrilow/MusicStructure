<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/text1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_album_pic"
        android:layout_width="@dimen/album_pic_size_small"
        android:layout_height="@dimen/album_pic_size_small"
        android:layout_margin="@dimen/album_pic_small_leftMargin"
        tools:src="@drawable/guitar"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_pic_size_small"
        android:layout_marginRight="@dimen/songTitle_rightMargin"
        android:layout_marginTop="@dimen/songTitle_topMargin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/songTitle_topMargin"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            tools:text="Song Name"/>

        <TextView
            android:id="@+id/tv_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondaryText"
            tools:text="Enrco Spanish"/>

    </LinearLayout>

</LinearLayout>